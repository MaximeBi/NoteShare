<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_primary"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="16dp">

    <LinearLayout
        android:id="@+id/local_tab"
        android:layout_width="0dip"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border_primary_background">
        <ImageView
            android:id="@+id/local_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_sd_storage_white_24dp" />
        <TextView
            android:id="@+id/local_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Local"
            android:textColor="@color/highlight_color"
            android:textSize="20dip" />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:id="@+id/server_tab"
        android:layout_width="0dip"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/server_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:tint="@color/unhighlight_color"
            android:src="@drawable/ic_storage_white_24dp" />
        <TextView
            android:id="@+id/server_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Share"
            android:textColor="@color/unhighlight_color"
            android:textSize="20dip" />
    </LinearLayout>
</LinearLayout>
